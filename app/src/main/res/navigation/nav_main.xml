<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/NewsFragment">

    <fragment
        android:id="@+id/NewsFragment"
        android:name="com.mvvm.News.ui.News.list.NewsFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_News_list"
       >

        <action
            android:id="@+id/action_NewsFragment_to_NewsDetailFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/exit_left_to_right"
            app:popEnterAnim="@anim/enter_left_to_right"
            app:popExitAnim="@anim/exit_right_to_left"
            app:destination="@id/NewsDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/NewsDetailFragment"
        android:name="com.mvvm.News.ui.News.detail.NewsDetailFragment"
        tools:layout="@layout/fragment_News_detail"
        android:label="NewsDetailFragment" >
        <argument
            android:name="News"
            app:argType="com.mvvm.News.domain.model.NewsItem"
            app:nullable="false"
            />
    </fragment>


</navigation>